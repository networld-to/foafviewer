<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="to.networld.android.foafviewer"
      android:versionCode="3"
      android:versionName="0.10">
    <application 
    	android:icon="@drawable/foaf"
    	android:label="@string/app_name"
    	android:debuggable="false"
    >
        <activity android:name=".FOAFViewer" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FOAFMap" android:label="@string/foaf_map"/>
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".FOAFFriendListing" android:label="@string/friend_list"/>
         <activity android:name=".FOAFProfile" android:label="@string/foaf_profile"/>
        <activity android:name=".FOAFSettings" android:label="@string/settings"/>
        <activity android:name=".FOAFMapSettings" android:label="@string/map_settings"/>
    </application>
    <uses-sdk android:minSdkVersion="7" />


<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
<uses-permission android:name="android.permission.WRITE_CONTACTS"/>
</manifest>
